<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.tsypenkovalaba101112.ParentsController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TableView fx:id="parentsTable">
    <columns>
      <TableColumn fx:id="parentIdColInParents" text="Id" />
      <TableColumn fx:id="parentMotherFirstNameCol" text="Mother First Name" />
      <TableColumn fx:id="parentFatherFirstNameCol" text="Father First Name" />
      <TableColumn fx:id="parentLastNameCol" text="Last Name" />
    </columns>
  </TableView>

  <Button text="Поиск по фамилии" onAction="#onSearchButtonClick"/>
  <Button text="Сбросить поиск" onAction="#onResetSearchButtonClick"/>
  <Button text="Добавить запись" onAction="#onAddParentButtonClick"/>
  <Button text="Редактировать запись" onAction="#onEditParentButtonClick"/>
  <Button text="Удалить запись" onAction="#onDeleteParentButtonClick"/>
</VBox>
